{
  "name": "mithril-browserify-ts-budo",
  "version": "0.0.1",
  "description": "Mithril / Typescript / Browserify / HMR / Budo",
  "main": "index.js",
  "scripts": {
    "compile-app": "browserify --debug src/index.ts -p [ tsify --project src/tsconfig.json ] -x=mithril -o public/js/app.js",
    "compile-vendor": "browserify --debug -r mithril -o public/js/vendor.js",
    "compile-pcss": "postcss src/index.pcss --use postcss-import postcss-nesting autoprefixer -o public/css/app.css",
    "watch-pcss": "postcss src/index.pcss --watch --use postcss-import postcss-nesting autoprefixer -o public/css/app.css",
    "compile": "npm-run-all compile-app compile-pcss",
    "build-app": "browserify src/index.ts -x=mithril -p [ tsify --project src/tsconfig.json ] | uglifyjs -cm -o public/js/app.js",
    "build-vendor": "browserify -r mithril | uglifyjs -cm -o public/js/vendor.js",
    "build-pcss": "postcss src/index.pcss --no-map --use postcss-import postcss-nesting autoprefixer postcss-clean -o public/css/app.css",
    "build": "npm-run-all build-vendor build-app build-pcss",
    "serve": "budo src/index.ts:js/app.js -p 3000 --dir public --live=*.{html,css} -- --debug -p [ tsify --project src/tsconfig.json ] -x=mithril",
    "start": "npm-run-all -p compile-vendor watch-pcss serve",
    "clean": "rm -f public/css/app.css public/js/vendor.js public/js/app.js"
  },
  "keywords": [],
  "author": "spacejack",
  "license": "MIT",
  "dependencies": {
    "mithril": "^1.1.1"
  },
  "devDependencies": {
    "@types/mithril": "^1.1.5",
    "autoprefixer": "^7.1.1",
    "browserify": "^14.4.0",
    "browserify-hmr": "^0.3.5",
    "budo": "^10.0.3",
    "npm-run-all": "^4.0.2",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-import": "^10.0.0",
    "postcss-nesting": "^4.0.1",
    "tsify": "^3.0.1",
    "tslint": "^5.4.3",
    "tslint-microsoft-contrib": "^5.0.0",
    "typescript": "^2.3.4",
    "uglify-js": "^3.0.18"
  }
}
