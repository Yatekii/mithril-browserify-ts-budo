{
  "name": "mithril-browserify-ts-budo",
  "version": "0.1.0",
  "description": "Mithril / Babel / Browserify / HMR / Budo",
  "main": "index.js",
  "scripts": {
    "compile:js": "browserify --debug src/index.js -t [ babelify --presets [ es2015 ] ] -o public/js/app.js",
    "compile:pcss": "postcss src/index.pcss -o public/css/app.css",
    "watch:pcss": "postcss src/index.pcss --watch -o public/css/app.css",
    "build:ts": "browserify src/index.js -t [ babelify --presets [ es2015 ] ] | uglifyjs -cm -o public/js/app.js",
    "build:pcss": "postcss src/index.pcss --env production -o public/css/app.css",
    "clean:js": "rm -f public/js/app.js",
    "clean:pcss": "rm -f public/css/app.css",
    "compile": "run-s compile:*",
    "build": "run-s build:*",
    "clean": "run-s clean:*",
    "serve": "budo src/index.js:js/app.js -p 3000 --dir public --live=*.{html,css} -- --debug -p [ browserify-hmr ] -t [ babelify --presets [ es2015 ] ]",
    "start": "run-p watch:* serve"
  },
  "keywords": [],
  "author": "spacejack",
  "license": "MIT",
  "dependencies": {
    "mithril": "^1.1.6"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^15.2.0",
    "browserify-hmr": "^0.3.6",
    "budo": "^11.0.1",
    "npm-run-all": "^4.1.2",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^4.1.1",
    "postcss-custom-properties": "^6.2.0",
    "postcss-import": "^11.0.0",
    "postcss-nesting": "^4.2.1",
    "stylelint-config-recommended": "^2.0.1",
    "uglify-js": "^3.3.9"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
